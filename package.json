{
  "name": "next-new",
  "version": "1.0.0",
  "description": "Create a new Next.js project",
  "main": "index.js",
  "repository": "ntwcklng/next-new",
  "bin": {
    "nn": "./bin/nn.js"
  },
  "files": [
    "lib",
    "bin",
    "templates"
  ],
  "scripts": {
    "test": "xo && ava",
    "test:watch": "ava --watch --match='!*SKIP_WATCH*'",
    "prepush": "npm test",
    "precommit": "lint-staged",
    "lint": "xo"
  },
  "engines": {
    "node": ">=6.2.0"
  },
  "ava": {
    "failFast": true,
    "files": "test/*.js",
    "source": [
      "bin/*.js",
      "lib/*.js"
    ],
    "require": [
      "async-to-gen/register"
    ]
  },
  "xo": {
    "extends": "prettier",
    "ignores": [
      "templates/**"
    ]
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "keywords": [
    "next.js",
    "zeit",
    "scaffold",
    "boilerplate",
    "create"
  ],
  "author": "Marvin Mieth <ntwcklng@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "args": "^5.0.0",
    "async-to-gen": "^1.3.2",
    "chalk": "^2.0.1",
    "copy-paste": "^1.3.0",
    "copy-template-dir": "^1.3.0",
    "execa": "^0.11.0",
    "is-async-supported": "^1.2.0",
    "mz": "^2.6.0",
    "node-version": "^1.0.0",
    "ora": "^3.0.0",
    "rimraf": "^3.0.2",
    "update-notifier": "^2.2.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "eslint-config-prettier": "^2.0.0",
    "husky": "^1.0.0",
    "lint-staged": "^8.0.0",

    "prettier": "^1.0.2",
    "temp": "^0.8.3",
    "xo": "^0.23.0"
  }
}
